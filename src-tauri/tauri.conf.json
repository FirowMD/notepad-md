{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "firow-notepad",
  "version": "0.2.1",
  "identifier": "com.firow-notepad.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "FirowNotepad",
        "width": 832,
        "height": 600,
        "dragDropEnabled": true,
        "decorations": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "fragmentPaths": ["./windows/fragments/context_menu.wxs"],
        "componentRefs": ["ContextMenuRegistryEntries"]
      }
    }
  }
}
